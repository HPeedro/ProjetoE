<!DOCTYPE html>
<html lang="">

<head>
  <title>PUC-Shop</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <link href="../layout/styles/layout.css" rel="stylesheet" type="text/css" media="all">
</head>

<body id="top">
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <div class="wrapper bgded overlay parallax" style="background-image:url('../images/demo/backgrounds/smd.jpg');">
    <div class="hoc clear">
      <!-- ################################################################################################ -->
      <nav id="mainav">

        <ul class="clear">
          <li class="active"><a href="http://localhost:3000/index">Home</a></li>
          <li><a class="drop" href="#">Produtos</a>
            <ul>
              <li><a href="http://localhost:3000/index/products">Todos os produtos</a></li>
              <% if (type == "loja") { %>
                <li><a href="http://localhost:3000/cadastroproduto">Cadastrar Produto</a></li>
              <%}%>
            </ul>
          </li>
          <li><a href="http://localhost:3000/index/carrinho">Carrinho</a></li>
          <%if(user == null){ %>
            <li><a href="http://localhost:3000/index/login">Login</></li>
         <% } else { %>
            <li><%= user %> </li>
         <%}%>
        </ul>
      </nav>

      <!-- ################################################################################################ -->
      <!-- ################################################################################################ -->
      <!--  <div  class="wrapper row3">   -->
      <div>
        <section id="services" class="hoc container clear">
          <!-- ################################################################################################ -->
          <div class="center btmspace-80">
            <h6 class="heading underline font-x2">Produto</h6>
          </div>

          <div class="wrapper ">
            <main class="hoc container clear">
                <% for(var i=0;i<lista.length;i++){ %>
              <!-- main body -->
              <!-- ################################################################################################ -->
              <article class="group">
                <div class="one_half first">
                  <h6 class="heading underline font-x2"><%=lista[i].title%></h6>
                  <p>Detalhes do produto </p>
                  <p class="btmspace-30"><%=lista[i].description%></p>
                  <p>Por apenas:  R$  <%=lista[i].price%></p>
                  <form action="http://localhost:3000/pedido/<%=lista[i].id%>" method="post"> 
                      <footer><input type="submit" class="login100-form-btn" value="Comprar"/></footer>
                  </form>
                </div>
                <div class="one_half"><a class="imgover" href="http://localhost:3000/index/products"><img class="borderedbox inspace-10" src=<%=lista[i].url%> alt=""></a></div>
              </article>
              <!-- ################################################################################################ -->
              <!-- / main body -->
              <div class="clear"></div>
              <% } %>
            </main>
          </div>
          <!-- ################################################################################################ -->
        </section>
      </div>
      <!-- ################################################################################################ -->
    </div>
    <!-- ################################################################################################ -->
    <div class="wrapper row4">
        <footer id="footer" class="hoc clear">
          <!-- ################################################################################################ -->
          <div class="one_quarter first">
            <h1 class="logoname clear"><a href="index.html"><i class="fas fa-handshake"></i> <span>PUC-Shop</span></a></h1>
            <p class="btmspace-30">Os melhores preços<a href="#">&hellip;</a></p>
            <ul class="faico clear">
              <li><a class="faicon-facebook" href="#"><i class="fab fa-facebook"></i></a></li>
              <li><a class="faicon-google-plus" href="#"><i class="fab fa-google-plus-g"></i></a></li>
              <li><a class="faicon-linkedin" href="#"><i class="fab fa-linkedin"></i></a></li>
              <li><a class="faicon-twitter" href="#"><i class="fab fa-twitter"></i></a></li>
              <li><a class="faicon-vk" href="#"><i class="fab fa-vk"></i></a></li>
            </ul>
          </div>
          <div class="one_quarter">
            <h6 class="heading">Localização</h6>
            <ul class="nospace linklist contact">
              <li><i class="fas fa-map-marker-alt"></i>
                <address>
                  Rua Professor Dr. Euryclides de Jesus Zerbini, 1516 - Parque Rural Fazenda Santa Cândida, Campinas - SP, 13087-571
                </address>
              </li>
              
            </ul>
          </div>
          <div class="one_quarter">
            <h6 class="heading">Desenvolvedores</h6>
            <ul class="nospace linklist">
              <li><a> Pedro Cremasco</a></li>
              <li><a>David Marques</a></li>
              <li><a>Bianca Amarante</a></li>
              <li><a>Artur Malandrin</a></li>
            </ul>
          </div>
          <div class="one_quarter">
            <h6 class="heading">Contato</h6>
            <ul class="nospace linklist">
              <li>
                <article>
                  <li><i class="fas fa-phone"></i> +55 (19) 99938-1313</li>
                  <li><i class="fas fa-fax"></i> +55 (19) 99938-1313</li>
                  <li><i class="far fa-envelope"></i> info@PUC-Shop.com</li>
                </article>
              </li>
            </ul>
          </div>
          <!-- ################################################################################################ -->
        </footer>
      </div>
      <!-- ################################################################################################ -->
      <!-- ################################################################################################ -->
      <!-- ################################################################################################ -->
      <div class="wrapper row5">
        <div id="copyright" class="hoc clear">
          <!-- ################################################################################################ -->
          <p class="fl_left">Copyright &copy; 2020 - All Rights Reserved - <a href="#">PUC Shop</a></p>
          <p class="fl_right">Template by <a target="_blank" href="https://www.os-templates.com/" title="Free Website Templates">OS
              Templates</a></p>
          <!-- ################################################################################################ -->
        </div>
      </div>
