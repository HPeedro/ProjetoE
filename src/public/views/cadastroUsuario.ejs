    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form method="POST"  action="http://localhost:3000/user"> 
                        <select  name="type" id="type" class="browser-default custom-select">
                            <option selected>Tipo de Registro</option>
                            <option value="user" name="type" id="user">User</option>
                            <option value="loja" name="type" id="loja">Loja</option>
                          </select>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Usuario ou Nome da Loja</label>
                                    <input class="input--style-4" type="text" name="name" required="required">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Senha</label>
                                    <input class="input--style-4" type="password" name="senha" id="password" required="required">
                                    <br><br><label class="label">Confirmação da Senha</label>
                                    <input class="input--style-4" type="password" id="confirm_password" required="required">
                                    <script type="text/javascript">
                                        var password = document.getElementById("password")
                                            , confirm_password = document.getElementById("confirm_password");

                                        function validatePassword(){
                                            if(password.value != confirm_password.value) {
                                            confirm_password.setCustomValidity("Senhas diferentes!");
                                            } else {
                                            confirm_password.setCustomValidity('');
                                            }
                                        }
                                        password.onchange = validatePassword;
                                        confirm_password.onkeyup = validatePassword;
                                      </script>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Gender</label>
                                    <div class="p-t-10">
                                        <label class="radio-container m-r-45">Male
                                            <input type="radio" checked="checked" name="gender">
                                            <span class="checkmark"></span>
                                        </label>
                                        <label class="radio-container">Female
                                            <input type="radio" name="gender">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Email</label>
                                    <input class="input--style-4" type="email" name="email" required="required">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">CPF</label>
                                    <input class="input--style-4" type="text" name="cpf" required="required">
                                </div>
                            </div>
                        </div>
                        <div>
                          <div class="col-12">
                            <div class="input-group">
                                <label class="label">descrição da loja</label>
                                <input class="input--style-4" type="text" name="description">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-group">
                                <label class="label">Url da imagem</label>
                                <input class="input--style-4" type="text" name="url">
                            </div>
                        </div>
                    </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
