<body id="top">
  <!-- ################################################################################################ -->
  <!-- ################################################################################################ -->
  <div class="wrapper  overlay " style="background-image:url('../images/demo/backgrounds/board.jpg');">
    <div class="hoc clear">
       <!-- ################################################################################################ -->
       <nav id="mainav">
        <ul class="clear">
          <li class="active"><a href="http://localhost:3000/index">Home</a></li>
          <li><a class="drop" href="#">Produtos</a>
            <ul>
              <li><a href="http://localhost:3000/index/products">Todos os produtos</a></li>
              <% if (type == "loja") { %>
                <li><a href="http://localhost:3000/cadastroproduto">Cadastrar Produto</a></li>
              <%}%>
            </ul>
          </li>
          <li><a href="http://localhost:3000/index/carrinho">Carrinho</a></li>
          <%if(user == null){ %>
            <li><a href="http://localhost:3000/index/login">Login</></li>
         <% } else { %>
            <li><a href="http://localhost:3000/usuario"> <%= user %> </li>
         <%}%>
        </ul>
      </nav>
      <!-- ################################################################################################ -->
      <!-- ################################################################################################ -->
      <!--  <div  class="wrapper row3">   -->
      <div>
        <section id="services" class="hoc container clear">
          <!-- ################################################################################################ -->
          <div class="center btmspace-80">
            <h6 class="heading underline font-x2">Nossos produtos</h6>
          </div>
          <ul class="nospace group">
            <% for(var i=0;i<lista.length;i++){ %>
            <li class="one_third">
              <article><a href="#"><i class="fab fa-fort-awesome"></i></a>
                <img class="borderedbox inspace-10" src=<%=lista[i].url %> alt="">
                <h6 class="heading">
                  <%=lista[i].title %>
                </h6>
                <p>
                  <%=lista[i].description %>
                </p>
                <!-- LISTA O PRODUTO ESPECIFICO -->
                <footer><a href="http://localhost:3000/product/<%=lista[i].id%>"><i class="fas fa-arrow-right"></i></a></footer>
              </article>
              <% } %>
          </ul>
          <!-- ################################################################################################ -->
        </section>
      </div>
      <!-- ################################################################################################ -->
    </div>
